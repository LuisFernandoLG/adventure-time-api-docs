---
import { baseEndpoint } from "../constants/api";
import { episodeService } from "../services/api/episodeService";
import EpisodesCard from "./EpisodesCard.astro";

const episodes = await episodeService().getManyById([1, 2]);
---

<h2 class="text-4xl text-center font-bold text-white mt-20 mb-5">Episodes</h2>

<section class="grid grid-cols-6 gap-8 max-w-[1000px] mx-auto">
  {
    episodes.map((episode) => {
      return (
      <EpisodesCard 
        id={episode.id}
        slug={episode.slug}
        image={episode.image}
        name={episode.name}
        description={episode.description}
        characters={episode.characters}
      />
      );
    })
  }
</section>
