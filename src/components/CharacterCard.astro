---
import { baseEndpoint } from '../constants/api';

interface Props {
    id: number;
    name: string;
    full_name: string;
    image: string;
    thumbanil?: string;

    kingdomId: number;
    kingdomName: string 
}

const props = Astro.props;
---


<article class="col-span-6 md:col-span-3 flex gap-5 rounded-md overflow-hidden bg-gray-700">
    <div class="w-40 h-full min-w-40">
      <img
        class="aspect-square h-full object-cover"
        src={props.image}
        alt={props.full_name}
      />
    </div>
    <div class="py-4 pr-4 truncate text-white">
      <a
        class="text-2xl md:text-3xl font-black  text-white hover:text-pink-500"
        href={`${baseEndpoint}/characters/${props.id}?includeKingdom`}
        target="_blank"
      >
        {props.name}
      </a>
      <span class="block text-white opacity-90 text-xs mt-2">
        Full Name:
      </span>
      <span class="block md:text-xl text-white black text-md">
        {props.full_name}
      </span>

      <span class="block text-white opacity-90 text-xs mt-2">
        Kingdom:
      </span>
      <a
        class="block md:text-xl text-white font-bold hover:text-pink-500 underline"
        href={`${baseEndpoint}/kingdoms/${props.kingdomId}`}
        target="_blank"
      >
        {props.kingdomName}
      </a>
    </div>
  </article>