---
import { baseEndpoint } from '../constants/api';

interface Props {
    id: number;
    name: string;
    full_name: string;
    image: string;
    thumbanil?: string;

    kingdomId: number;
    kingdomName: string 
}

const props = Astro.props;
---


<article class="col-span-3 flex gap-5 rounded-md overflow-hidden bg-gray-700">
    <div class="w-40 h-40">
      <img
        class="aspect-square"
        src={props.image}
        alt={props.full_name}
      />
    </div>
    <div class="py-4 pr-4">
      <a
        class="text-2xl font-black whitespace-nowrap text-white hover:text-pink-500"
        href={`${baseEndpoint}/characters/${props.id}?includeKingdom`}
        target="_blank"
      >
        {props.name}
      </a>
      <span class="block text-white opacity-90 text-xs mt-2">
        Full Name:
      </span>
      <span class="block text-white black text-md">
        {props.full_name}
      </span>

      <span class="block text-white opacity-90 text-xs mt-2">
        Kingdom:
      </span>
      <a
        class="block text-white font-bold hover:text-pink-500 underline"
        href={`${baseEndpoint}/kingdoms/${props.kingdomId}`}
        target="_blank"
      >
        {props.kingdomName}
      </a>
    </div>
  </article>